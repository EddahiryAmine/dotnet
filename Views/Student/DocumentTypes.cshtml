@model IEnumerable<EmsiStudySpace.Models.TypeDocument>

@{
    ViewData["Title"] = "Types de Documents";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Global Styling */
        h2 {
            text-align: center;
            color: #198754;
            font-size: 2.5rem;
            margin-bottom: 30px;
            position: relative;
        }

            h2::after {
                content: "";
                display: block;
                width: 120px;
                height: 4px;
                background: #198754;
                margin: 10px auto 0;
                border-radius: 2px;
            }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 50px auto;
            padding: 20px;
            max-width: 1200px;
        }

        /* Card Design */
        .card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 12px;
            padding: 20px;
            width: 300px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }

        /* Sticky Note Effect */
        .card::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 20px;
                background: linear-gradient(45deg, #198754, #9ccc65);
            border-radius: 5px;
            z-index: -1;
        }

        /* Hover Effect */
        .card:hover {
            transform: translateY(-10px) rotate(-1deg);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .card:hover::before {
                    background: linear-gradient(45deg, #198754, #8bc34a);
        }

        /* Card Content */
        .card h3 {
            font-size: 1.4rem;
            color: #333;
            text-align: center;
            margin-bottom: 15px;
        }

        .card p {
            font-size: 1rem;
            color: #555;
            text-align: justify;
        }

        .card a {
            display: inline-block;
            text-align: center;
                background: #198754;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 0.9rem;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

        .card a:hover {
                    background: #198754;
        }

        /* Animation */
        .card {
            animation: fadeInUp 1s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .card {
                width: 100%;
                max-width: 90%;
            }
        }
    </style>
</head>
<body>
    <h2>Types de Documents</h2>
    <div class="container">
        @foreach (var type in Model)
        {
            <div class="card">
                <h3>@type.Nom</h3>
                <a href="/documents/@type.Id" class="text-decoration-none">
                    @type.Nom
                </a>
            </div>
        }
    </div>
</body>
</html>
