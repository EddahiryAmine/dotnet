@model EmsiStudySpace.Models.TypeDocument

@{
    ViewData["Title"] = "Supprimer un Type de Document";
}

<!-- Styles pour la fenêtre modale -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6); /* Background semi-transparent */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        padding-top: 70px;
    }

    .modal-content {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 10px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        animation: fadeIn 0.3s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    h2 {
        font-size: 1.5rem;
        color: #f44336; /* Red */
        margin-bottom: 1rem;
    }

    .modal-content h5 {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .modal-content .details {
        margin: 1rem 0;
    }

    .modal-content .details dt {
        font-weight: bold;
        color: #666;
    }

    .modal-content .details dd {
        margin: 0;
        color: #333;
    }

    .modal-buttons {
        margin-top: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-danger {
        background-color: #f44336; /* Red */
        color: #fff;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

    .btn-danger:hover {
        background-color: #c62828;
        transform: scale(1.05);
    }

    .btn-secondary {
        background-color: #f4f4f4; /* Light gray */
        color: #333;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

    .btn-secondary:hover {
        background-color: #ddd;
        transform: scale(1.05);
    }
</style>

<!-- Contenu de la fenêtre modale -->
<div class="modal">
    <div class="modal-content">
        <h2>Supprimer le Type de Document</h2>
        <h5>Êtes-vous sûr de vouloir supprimer cet élément ?</h5>
        <div class="details">
            <dl class="row">
                <dt class="col-sm-4">Nom :</dt>
                <dd class="col-sm-8">@Model.Nom</dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="modal-buttons">
                <button type="submit" class="btn btn-danger">Supprimer</button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
