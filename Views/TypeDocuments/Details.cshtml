@model EmsiStudySpace.Models.TypeDocument

@{
    ViewData["Title"] = "Details - " + Model.Nom;
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>TypeDocument Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Category Name</dt>
        <dd class="col-sm-10">@Model.Nom</dd>
    </dl>
</div>

<h4>Documents Associated with this Category</h4>

@if (Model.Documents != null && Model.Documents.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Document Name</th>
                <th>Document Description</th>
                <!-- Add more columns here as per your Document model properties -->
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model.Documents)
            {
                <tr>
                    <td>@document.Titre</td>
                    <td>@document.Description</td>
                    <!-- Add more fields here as needed -->
                    <td>
                        <a asp-action="Edit" asp-controller="Documents" asp-route-id="@document.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Details" asp-controller="Documents" asp-route-id="@document.Id" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No documents are associated with this category.</p>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
