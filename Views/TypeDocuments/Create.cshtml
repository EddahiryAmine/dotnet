@model EmsiStudySpace.Models.TypeDocument

@{
    ViewData["Title"] = "Create Category";
}

<!-- Style and Animation -->
<style>
    /* Global Styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2rem;
        color: #198754; /* Lighter green */
        font-weight: bold;
        position: relative;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    h2::after {
        content: '';
        display: block;
        width: 0;
        height: 3px;
            background-color: #198754; /* Lighter green */
        margin: 0.5rem auto 0;
        animation: titleUnderline 1s ease-out forwards;
    }

    /* Keyframes for the underline effect */
    @@keyframes titleUnderline {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    /* Button Styling */
    .btn-primary {
        background-color: #198754; /* Green */
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

    .btn-primary:hover {
            background-color: #198754; /* Darker green */
        transform: scale(1.05);
    }

    .btn-secondary {
        background-color: #f4f4f4; /* Light gray */
        color: #198754;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

    .btn-secondary:hover {
        background-color: #ddd;
        transform: scale(1.05);
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        font-size: 1rem;
            color: #198754;
        margin-bottom: 0.5rem;
    }

    .form-group input {
        width: 100%;
        padding: 0.8rem;
            border: 2px solid #198754;
        border-radius: 12px;
        transition: width 0.4s ease, border-color 0.3s ease;
    }

    .form-group input:focus {
        width: 100%;
                border-color: #198754;
        outline: none;
    }

    .text-danger {
        font-size: 0.9rem;
        color: #f44336;
    }

    /* Container Styling */
    .container {
        padding: 2rem;
        margin-top: 2rem;
    }

</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h4>Type document</h4>
    <hr />

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Crée</button>
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
